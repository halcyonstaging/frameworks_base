<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pocket_mode_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <View
        android:id="@+id/scrim_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/pocket_mode_inner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pocket_view_inner_view_margin_top"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pocket_mode_phone"
            android:layout_width="@dimen/pocket_view_img_width"
            android:layout_height="@dimen/pocket_view_img_height"
            android:layout_marginTop="@dimen/pocket_view_img_margin_top"
            android:src="@drawable/pocket_mode_img" />

        <TextView
            android:id="@+id/pocket_view_title_cancel"
            style="@style/pocket_view_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pocket_view_title_cancel_margin_top"
            android:layout_marginHorizontal="@dimen/pocket_view_cancel_margin_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/pocket_view_text" />

    </LinearLayout>
</RelativeLayout>
